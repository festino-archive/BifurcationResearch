<Window x:Class="Bifurcation.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bifurcation" xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
        mc:Ignorable="d"
        Title="PlotWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="button_ClearPlot" HorizontalAlignment="Center" Width="200" Padding="5" Margin="0 0 0 5" Click="button_ClearPlot_Click">Clear</Button>
        <d3:Chart Name="myChart" Grid.Row="1">
            <Grid Name="myGrid"/>
        </d3:Chart>
    </Grid>
</Window>
